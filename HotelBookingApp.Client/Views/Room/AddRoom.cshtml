@model RoomDTO

@{
    ViewBag.Title = "Add Room";
 }

<h1>Room Registration</h1>

@if(ViewBag.Msg != null)
{
    <h3><font color="blue">@ViewBag.Msg</font></h3>
}


<div class="row">
    <div class="col-md-12">
        <form method="post" asp-controller="Room" asp-action="AddRoom">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoomName"></label>
                <input asp-for="RoomName" class="form-control" />
                <span asp-validation-for="RoomName" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="NumberofBed"></label>
                <input asp-for="NumberofBed" class="form-control" />
                <span asp-validation-for="NumberofBed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
       

            <div class="form-group">
                <label asp-for="TotalNumberAvailable "></label>
                <input asp-for="TotalNumberAvailable " class="form-control" />
                <span asp-validation-for="TotalNumberAvailable " class="text-danger"></span>
            </div>

               <div class="form-group">
                 <label asp-for="@Model.HasSwimmingPool"></label>

                  <select name="HasSwimmingPool">
                      <option value ="True">True</option>
                      <option value ="False">False</option>
                     
                  </select>
                  <span asp-validation-for="@Model.HasSwimmingPool" class="text-danger"></span>
               </div>

                 <div class="form-group">
                 <label asp-for="@Model.HasWifi"></label>

                  <select name="HasWifi">
                      <option value ="True">True</option>
                      <option value ="False">False</option>
                     
                  </select>
                  <span asp-validation-for="@Model.HasWifi" class="text-danger"></span>
               </div>

                 <div class="form-group">
                 <label asp-for="@Model.IsBreakfastInluded"></label>

                  <select name="IsBreakfastInluded">
                      <option value ="True">True</option>
                      <option value ="False">False</option>
                     
                  </select>
                  <span asp-validation-for="@Model.IsBreakfastInluded" class="text-danger"></span>
               </div>

              
           
            <div class="form-group">
                 <label>Category Name</label>

                  <select asp-for="@Model.Id" asp-items="@(new SelectList(@ViewBag.AllCategory, "Id", "CategoryName"))"></select>
                  <span asp-validation-for="@Model.Id" class="text-danger"></span>
            </div>
            


            
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>