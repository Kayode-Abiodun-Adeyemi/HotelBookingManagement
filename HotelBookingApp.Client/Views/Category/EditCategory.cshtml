@model CategoryDTO

@{
    ViewBag.Title = "Edit Category";
}

<form asp-controller = "Category" asp-action="EditCategory" method="post"  class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="form-group row">
        <label asp-for="CategoryName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="CategoryName" class="form-control" value=@Model.CategoryName>
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="CategoryDescription" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="CategoryDescription" class="form-control" value=@Model.CategoryDescription>
            <span asp-validation-for="CategoryDescription" class="text-danger"></span>
        </div>
    </div>
     <input asp-for="Id" hidden  value=@Model.Id>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">
                Edit Hotel Category
            </button>
        </div>
    </div>
  </form>