@model CategoryDTO

@{
    ViewBag.Title = "Create New Category";
}
@if(ViewBag.Response != null)
{
    <h3>@ViewBag.Response</h3>
   
}
<form asp-action="AddCategory" asp-controller = "Category" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="form-group row">
        <label asp-for="CategoryName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="CategoryName" class="form-control" placeholder="Name">
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="CategoryDescription" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="CategoryDescription" class="form-control" placeholder="Description">
            <span asp-validation-for="CategoryDescription" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">
                Create Hotel Category
            </button>
        </div>
    </div>
</form>