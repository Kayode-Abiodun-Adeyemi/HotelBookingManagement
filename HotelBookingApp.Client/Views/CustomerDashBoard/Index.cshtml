@model IEnumerable<Categories>
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
   var Role = @HttpContextAccessor.HttpContext.Session.GetString("Role");
}

<h1>View Category</h1>

<div class="card-deck">
    @foreach(var item in Model)
    {
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%">
            <div class="card-header">
                <h2>@item.CategoryName</h2>
                <h3><i>@item.CategoryDescription</i></h3>
            </div>
          <!--  <img class="card-img-top" src="~/images/" /> -->
            <div class="card-footer text-center">
                <a  asp-controller = "CustomerDashBoard" asp-action="ViewRooms" asp-route-id= "@item.Id" class="btn btn-primary">View</a>
               @* <a href="" class="btn btn-primary">Edit</a>
                <a href="" class="btn btn-danger">Delete</a>*@
            </div>

        </div>
    }

</div>